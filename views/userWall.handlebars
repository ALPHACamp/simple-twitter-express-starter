<div class="row">
  <div class="col">
    <img src="{{user.avatar}}" alt="{{user.name}}">
    <h2>{{user.name}}</h2>
    <p>{{user.introduction}}</p>

    <a href="#" class="d-block"><strong>Tweets {{user.Tweets.length}}</strong></a>
    <a href="/users/{{user.id}}/followings" class="d-block"><strong>
        Following{{user.Followings.length}}
      </strong></a>
    <a href="/users/{{user.id}}/followers" class="d-block"><strong>Follower {{user.Followers.length}}</strong></a>
    <a href="/users/{{user.id}}/likes" class="d-block"><strong>Like {{user.LikedTweets.length}}</strong></a>
    <!--是自己 是edit 是別人follow-->
    {{#ifCond  req.user.id user.id}}

    <a href="	/users/{{user.id}}/edit" class="btn" class="d-block">edit</a>
    {{else}}
    <a href="	followships" class="btn" class="d-block">FolloW</a>

    {{/ifCond }}

  </div>
  <div class="col">
    {{#each userTweets}}
    <div class="row border border-dark">
      <div class=" col mt-2 mb-2">
        <img src="{{../user.avatar}}">
      </div>
      <div class="col mt-3 mb-3">
        <a href="/users/{{../user.id}}/tweets">
          <h5>{{../user.name}}</h5>

        </a>
        <span>xx{{this.createdAt}}</span>
        <p>{{this.description}}
        </p>

        <a href="/tweets/{{this.id}}/replies" class="mr-2">Reply</a>
        <a href="/tweets/{{this.id}}/like">Like</a>
      </div>
    </div>
    {{/each}}

  </div>
</div>