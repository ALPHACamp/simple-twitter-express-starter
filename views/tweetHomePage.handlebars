<div class="row">
  <div class="col-7">
    <form action="/tweets" method="POST">
      <div class="form-group mb-1">
        <textarea class="form-control border-info" id="description" name="description" rows="4"
          placeholder="What's on your mind ?"></textarea>
      </div>

      <div class="inputs d-flex justify-content-between">
        <div class="location">
          <span class="badge badge-dark">Check-in Here</span>
          <input id="CheckIn" name="CheckIn" placeholder="Where are you now?">
        </div>

        <div class="button d-flex justify-content-end">
          <input type="hidden" id="userId" name="userId" value="{{user.id}}">
          <button type="submit" onclick="sendMessage()" class="btn btn-info text-dark font-weight-bold">Tweet</button>
        </div>
      </div>      
   
    </form>

    <div class="tweets pt-1">
      {{#each tweets}}
      <div class="card my-2">
        <div class="card-body row">
          <div class="col-md-4 pr-0">
            <img src="{{this.User.avatar}}" class="card-img mt-2 border" width="100" alt="avatar">
          </div>
          <div class="col-md-8">
            <label>
              <h6 class="card-title text-primary">@{{this.User.name}}, {{moment this.updatedAt}}</h6>
            </label>

            <p>{{this.description}}</p>

            <div class="row ml-0 links">
              <a href="/tweets/{{this.id}}/replies" style="line-height: 27px;">
                Reply({{#count this.Replies}}{{/count}})
              </a>
              
              {{#if this.isLiked}}
              <form action="/tweets/{{this.id}}/unlike?_method=DELETE" method="POST" class="ml-2 text-success d-inline w-25" style="line-height: 25px;">
                <button type="submit" class="text-success border-0 p-0 bg-white btn btn-link">
                  Unlike({{#count this.Likes}}{{/count}})
                </button>
              </form>
              {{else}}
              <form action="/tweets/{{this.id}}/like" method="POST" class="ml-2 text-danger d-inline w-25" style="line-height: 25px;">
                <button type="submit" class="text-danger border-0 p-0 bg-white btn btn-link">
                  Like({{#count this.Likes}}{{/count}})
                </button>
              </form>
              {{/if}}
              
              {{#if this.CheckIn}}
              <a class="ml-4 text-info" href="https://maps.google.com/?q={{this.CheckIn}}" target="_blank" style="line-height: 30px;">@ {{this.CheckIn}}
              </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="col-5 px-0">
    <h2 class="text-info ml-2">Popular</h2>
    {{#each users}}
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4 p-1">
          <img src="{{this.avatar}}" class="card-img mt-4 ml-2 border" width="100" alt="avatar">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><a href="/users/{{this.id}}/tweets">@{{this.name}}</a></h5>
            <p class="card-text">{{this.introduction}}</p>
            <div class="button button d-flex justify-content-end">
              {{#ifCond ../user.id this.id}}

              {{else}}
              {{#if this.isFollowed}}
              <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: inline">
                <button type="submit" class="btn btn-warning font-weight-bold">Unfollow</button></form>
              {{else}}
              <form action="/followships" method="POST" style="display: inline">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit" class="btn btn-info font-weight-bold">Follow</button> </form>
              {{/if}}
              {{/ifCond}}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>