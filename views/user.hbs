<div class="row mt-4 no-gutters">
  {{!-- user profile --}}
  <aside class="col-4 ">
    <div class="row mt-3">
      <div class="card col-8">
        <img src="{{user.avatar}}" class="card-img-top" alt="avatar">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/users/{{user.id}}/tweets">{{user.name}}</a>
          </h5>
          <p class="card-text">{{user.introduction}}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <a href="/users/{{user.id}}/tweets">Tweets {{user.Tweets.length}}</a>
          </li>
          <li class="list-group-item">
            <a href="/users/{{user.id}}/followings">Following {{user.Followings.length}}</a>
          </li>
          <li class="list-group-item">
            <a href="/users/{{user.id}}/followers">Follower {{user.Followers.length}}</a>
          </li>
          <li class="list-group-item">
            <a href="/users/{{user.id}}/likes">Like {{user.Likes.length}}</a>
          </li>
        </ul>
        <div class="card-body">
          <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit Profile</a>
        </div>
      </div>
    </div>
  </aside>
  {{!-- tweets --}}
  <main class="col-8 ">
    {{#each tweets}}
    <div class=" mt-3">
      <article>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4 ">
              <img src="{{../user.avatar}}" class="card-img" alt="avatar">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/users/{{../user.id}}/tweets">@{{../user.name}} ,{{this.date}}, {{this.time}}</a>
                </h5>
                <p class="card-text">{{this.description}}</p>
                <div class="d-flex align-items-center">
                  <a href="/tweets/{{this.id}}/replies">Reply({{this.countReplies}})</a>
                  <form action="/tweets/{{../user.id}}/like" method="POST" class="d-inline-block">
                    <button type="submit" class="btn btn-link">Like({{this.countLikes}})</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </article>
    </div>
    {{/each}}
  </main>
</div>