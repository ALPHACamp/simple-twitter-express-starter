<div id="login-box" class="pt-5 mx-auto d-none getData">
   <input id="user-name" placeholder="使用者名稱" type="text" value="{{userData.name}}">
  <input id="user-id" placeholder="使用者id" type="text" value="{{userData.id}}">    
</div>

<div id="chat-box" class="container mb-2 pt-3 border">

  <header class="user-title pt-5 pt-md-1">
    <h4 id="title">Websocket聊天室</h4>
    <h5 id="show-user-info"> 使用者：{{userData.name}}，你的id為"{{userData.id}}"，</h5>
    <h5 id="online-count" >當前共有 0人在線上，線上列表：</h5>
  </header>

  <section class="messages clearfix" id="messages" style="height: 60vh; overflow: auto; overflow-x:hidden;">
    {{!-- messages --}}
  </section>

  <footer class="input-box">
    <div class="input row">
      <input type="text" id="receiver" placeholder="請按Enter送出要私訊的id" class="col-3" disabled style="height: 5vh;">
      <input type="text" id="content" class="col-9" name="content" placeholder="請按Enter送出聊天內容" style="height: 5vh;">
    </div>
  </footer>
  
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script src="./chat.js"></script>