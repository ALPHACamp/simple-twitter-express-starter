<div class="col-lg-4 mt-5">
  <div class="card profile">
    <div class="top-sec">
      <img src="{{user.avatar}}">
    </div>
    <div class="span4 collapse-group">
      <div class="d-flex justify-content-around mb-2">
        <h2 class="card-title">{{user.name}}</h2>
        {{#if (eq isCurrentUser false)}}
        {{#if (eq (isFollowingUser isFollowed currentUser) true)}}
        <form action="/followships/{{user.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger ml-5">Following</button>
        </form>
        {{else}}
        <form action="/followships/{{user.id}}" method="POST">
          <button type="submit" class="btn btn-primary ml-5">Follow</button>
        </form>
        {{/if}}
        {{/if}}
      </div>
      <div class="m-3">
        {{#unless (eq (postLength user.introduction) 0)}}
        <p>{{reduceLength user.introduction}}<span class="collapse" id="viewdetails3">
            {{remainLength user.introduction}}</span> <a data-toggle="collapse" data-target="#viewdetails3">...<i
              class="fas fa-angle-double-right"></i>
          </a>
        </p>
        {{/unless}}
      </div>
    </div>
  </div>
  <div class="card profile my-3">
    <li class="list-group-item border-0">
      <a href="/users/{{user.id}}/tweets">
        <strong>{{postLength userTweets}}</strong>
        <span class="text-muted font-weight-light">Tweets</span>
      </a>
    </li>
    <li class="list-group-item border-0">
      <a href="/users/{{user.id}}/followings">
        <strong>{{postLength totalFollowings}}</strong>
        <span class="text-muted font-weight-light">Following</span>
      </a>
    </li>
    <li class="list-group-item border-0">
      <a href="/users/{{user.id}}/followers">
        <strong>{{postLength totalFollowers}}</strong>
        <span class="text-muted font-weight-light">Followers</span>
      </a>
    </li>
    <li class="list-group-item border-0">
      <a href="/users/{{user.id}}/likes">
        <strong>{{postLength totalLikes}}</strong>
        <span class="text-muted font-weight-light">Likes</span>
      </a>
    </li>
  </div>
  {{#if (eq isCurrentUser true)}}
  <a type="button" href="/users/{{user.id}}/edit" class="btn btn-primary" rows="3">Edit Profile</a>
  {{/if}}
</div>