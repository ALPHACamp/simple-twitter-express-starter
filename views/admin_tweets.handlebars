{{> admin_nav }}
<div class="row">
    <div class="col-1"></div>
    <div class="admiv_tweets col-10">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">USER</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">DELETE</th>
                </tr>
            </thead>
            <tbody>
                {{#each tweets}}
                <tr>
                    <th scope="row"></th>
                    <td>{{this.User.name}}</td>
                    <td>{{this.description}}</td>
                    <td><a class="btn btn-danger" href="/admin/tweets/{{this.id}}">DELETE</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>