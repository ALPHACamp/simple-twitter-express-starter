<div>
  <div class="row" style="margin: 40px;">
    <div class="col-md-6">
      <form action="/tweets" method="POST">
        <div class="input-group">
          <textarea class="form-control" name="text" placeholder="what's on your mind?" required  style="border-radius: 8px; height: 150px" maxlength="140"></textarea>
        </div>
        <br>  
        <button class="btn btn-primary" type="submit">Tweet</button>
      </form>    
      <br>
      <br>
      {{#each tweets}}
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="https://loremflickr.com/320/240/food,dessert,restaurant/" class="card-img">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/users/{{this.User.id}}/tweets">{{ this.User.name }},&nbsp;{{ moment this.createdAt }}</a>
                </h5>
                <p class="card-text">{{ this.description }}</p>
                <div class="row">
                  &nbsp;&nbsp;
                  <a href="/tweets/{{this.id}}/replies"
                    <button class="btn btn-outline-primary">reply</button>
                  </a>
                  &nbsp;&nbsp;&nbsp;&nbsp;
                  {{#if this.isLiked }}
                    <form action="/tweets/{{ this.id }}/unlike" method="POST" style="display: contents;">
                      <button type="submit" class="btn btn-danger">
                        unlike ({{ this.likeCount }})</button>
                    </form>
                  {{else}}
                    <form action="/tweets/{{ this.id }}/like" method="POST" style="display: contents;">
                      <input type="hidden" name="userId" value="{{this.id}}">
                      <button type="submit" class="btn btn-primary">
                        like ({{ this.likeCount }})
                        </button>
                    </form>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col-md-4">
      <p class="h1">popular</p>
      <br>
      {{#each users}}
        <div class="card mb-3" style="max-width: 400px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="https://loremflickr.com/320/240/food,dessert,restaurant/" class="card-img">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="#">{{ this.name }}</a>
                </h5>
                <p class="card-text">{{ this.introduction}}.</p>
          
                <div style="margin-left: 80px;">
                  {{#ifNotCond this.id ../user.id}}
                    {{#if this.isFollowed }}
                      <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                        <button type="submit" class="btn btn-danger">unfollow</button>
                      </form>
                    {{else}}
                      <form action="/followships" method="POST" style="display: contents;">
                        <input type="hidden" name="userId" value="{{this.id}}">
                        <button type="submit" class="btn btn-primary">follow</button>
                      </form>
                    {{/if}}
                  {{/ifNotCond}}
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>


