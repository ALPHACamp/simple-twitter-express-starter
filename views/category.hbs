<h1>{{ data.name }} Category</h1>
{{#each category.TweetCategories}}
  <div class="card mb-3 mt-5">
    <div class="row">
      <div class="col-md-4 my-4">
        <img src="{{this.Tweet.User.avatar}}" alt="{{this.Tweet.User.name}}" width="170px" height="170px" class="rounded ml-2">
      </div>
      <div class="col-md-8 pt-2">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/users/{{this.Tweet.User.id}}/tweets" style="text-decoration:none;">@{{ this.Tweet.User.name }}</a>
            <small class="pl-2">&nbsp;{{ moment this.Tweet.createdAt }}</small></h5>
          <p class="card-text pl-1" style="overflow:hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            white-space: normal;">
            {{this.Tweet.description}}
            <p>
              {{#each this.Tweet.TweetCategories }}
                {{#ifHashtags this.Category.name '#'}}
                  <a href="/tweets/{{this.CategoryId}}">{{this.Category.name}}</a>
                {{/ifHashtags}}
              {{/each}}
            </p>
          </p>
        </div>
        <div class="card-body text-right inline-block mt-1">
          <a href="/tweets/{{this.Tweet.id}}/replies" class="btn btn-outline-info
            mr-2">
            Reply({{ this.Tweet.replyCount }})</a>
          {{#if this.Tweet.isLiked }}
          <form action="/tweets/{{this.Tweet.id}}/unlike" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">
              <i class="fa fa-heart" aria-hidden="true"></i>
              ({{ this.Tweet.likeCount }})
            </button>
          </form>
          {{else}}
          <form action="/tweets/{{this.Tweet.id}}/like" method="POST" style="display: contents;">
            <input type="hidden" name="userId" value="{{this.Tweet.id}}" />
            <button type="submit" class="btn btn-secondary">
              <i class="fa fa-heart" aria-hidden="true"></i>
              ({{ this.Tweet.likeCount }})
            </button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/each}}
