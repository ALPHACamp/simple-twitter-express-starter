<div class="mt-3">
  <a href='javascript:history.back()'>
  <strong class="text-info">回上一頁</strong>
</a>
</div>
<br />
<br />
<div class="container col-7">
    <h1 class="text-center text-info">{{ category.name }}</h1>
    {{#each category.TweetCategories}}
    <div class="card mb-3 mt-5 justify-content-center">
      <div class="row">
        <div class="col-md-4 my-4">
          <img src="{{this.Tweet.User.avatar}}" alt="{{this.Tweet.User.name}}" width="170px" height="170px" class="rounded ml-2">
        </div>
        <div class="col-md-8 pt-2">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/users/{{this.Tweet.User.id}}/tweets" style="text-decoration:none;">@{{ this.Tweet.User.name }}</a>
              <small class="pl-2">&nbsp;{{ moment this.Tweet.createdAt }}</small>
            </h5>
            <p class="card-text pl-1" style="overflow:hidden;
              white-space: nowrap;
              text-overflow: ellipsis;
              display: -webkit-box;
              -webkit-line-clamp: 2;
              -webkit-box-orient: vertical;
              white-space: normal;">
              {{ this.Tweet.description}}
            </p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
