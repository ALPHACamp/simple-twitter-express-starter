{{!-- 推主個人檔案--}}
{{!-- 推主照片 --}}
<div class="text-center">
  <img src="{{data.avatar}}" alt="avatar" id="avatarProfileLg">
  {{!-- 推主簡介 --}}
  <h2 class="mt-3">{{data.name}}</h2>
  <div class="mx-auto" style="width: 15rem;">
    <p>{{data.introduction}}</p>
    {{!-- 推主資訊 --}}
    <ui class="align-items-center listVertical">
      <strong>Tweets</strong>
      <span class="badge badge-primary badge-pill">{{data.Tweets.length}}</span>
    </ui>
    <ui class="align-items-center listVertical">
      <strong>Following</strong>
      <span class="badge badge-primary badge-pill">{{data.Followings.length}}</span>
    </ui>
    <ui class="align-items-center listVertical">
      <strong>Follower</strong>
      <span class="badge badge-primary badge-pill">{{data.Followers.length}}</span>
    </ui>
    <ui class="align-items-center listVertical">
      <strong>Like</strong>
      <span class="badge badge-primary badge-pill">{{data.Likes.length}}</span>
    </ui>
  </div>
</div>