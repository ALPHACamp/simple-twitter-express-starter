<div class="card my-1 select-card">
  <div class="card-body" onclick="location.href='/tweets/{{id}}/replies'" style="cursor: pointer;">
    <div class="row no-gutters">
      {{!-- 大頭照 --}}
      <div class="col-3 pr-5">
        <a href="/users/{{User.id}}/tweets">
          <img src={{User.avatar}} alt="avatar" id="avatarTweet">
        </a>
      </div>
      {{!-- 貼文內容 --}}
      <div class="col pt-1 ml-n4">
        <h6 class="card-subtitle mb-2 text-muted">@ {{User.name}}, {{moment createdAt}}</h6>
        <p class="card-text">{{description}}</p>
        <a href="/tweets/{{id}}/replies" class="card-link">Reply({{ReplyCounts}})</a>
        <a href="#" class="card-link">like({{LikeCounts}})</a>
        <a href="#" class="card-link">Unlike</a>
      </div>
    </div>
  </div>
</div>
