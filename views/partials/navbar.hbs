<nav
  {{!-- 前後台不同背景色 --}}
  {{#if adminNavbar}}
    class="navbar navbar-dark bg-dark sticky-top"
  {{else}}
    class="navbar navbar-dark bg-primary sticky-top"
  {{/if}}
>
<div class="container">
  <div class="d-flex align-items-center">
    {{!-- 前後台不同 Logo --}}
    {{#if adminNavbar}}
      <a class="navbar-brand ml-1" href="/admin/tweets">
        <i class="fab fa-twitter"></i> Twitter 後台
      </a>
    {{else}}
      <a class="navbar-brand ml-1" href="/tweets">
        <i class="fab fa-twitter"></i> Twitter
      </a>
    {{/if}}
  </div>
  <div class="d-flex align-items-center">
      {{!-- user 相關按鈕 --}}
      {{#if user}}
        <a href="/users/{{user.id}}/tweets" class="d-flex align-items-center text-decoration-none text-light mr-2">
          <span class="text-light mr-2">{{user.name}}</span>
          <img src={{user.avatar}} alt={{user.name}} class="rounded mx-auto d-block" style="width: 40px">
        </a>
        {{!-- admin 後台按鈕 --}}
        {{#if user.role}}
          {{#if adminNavbar}}
            <a href="/tweets" class="text-decoration-none text-light btn btn-outline-light">回前台</a>
          {{else}}
            <a href="/admin" class="text-decoration-none text-light btn btn-outline-light">後台管理</a>
          {{/if}}
        {{/if}}
        <a href="/logout"><button class="btn btn-outline-light ml-2">登出</button></a>
      {{/if}}
  </div>
</div>
</nav>