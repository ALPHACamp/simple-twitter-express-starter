<div class="container">
  <div class="row">
    {{!-- 貼文牆時間軸 --}}
    <div class="col" id="main-stream">

      {{!-- 新增貼文 --}}
      <div class="row my-2">

        <form action="/tweets" method="POST" class="col mt-3">
          <div class="form-group">
            {{!-- 輸入欄 --}}
            <input class="form-control" id="newTweet" name="newTweet" rows="3"
              placeholder="What's on your mind?"></textarea>
            {{!-- 按鈕 --}}
            <button type="submit" class="btn btn-primary mt-2 float-right">Tweet</button>
          </div>
        </form>

      </div>

      {{!-- 其他貼文 --}}
      <div class="row">
        <div class="col">
          {{#each result }}
          <div class="card my-1">
            <div class="card-body">
              <div class="row">
                {{!-- 大頭照 --}}
                <div class="col-3">
                  <img src={{this.User.avatar}} alt="avatar" id="avatar-tweet">
                </div>
                {{!-- 貼文內容 --}}
                <div class="col mt-1">
                  <h6 class="card-subtitle mb-2 text-muted">@{{this.User.name}},{{this.updatedAt}}</h6>
                  <p class="card-text">{{this.description}}</p>
                  <a href="/tweets/{{this.id}}/replies" class="card-link">Reply({{this.Replies.length}})</a>
                  <a href="#" class="card-link">like({{this.Likes.length}})</a>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{!-- ------ --}}

    </div>
    {{!-- 熱門話題 --}}
    <div class="col-4 mt-4" id="popular-field">
      <h3>Popular</h3>
      {{!-- 熱門貼文 --}}
      <div class="row">
        <div class="col">
          {{#each result}}
          <div class="card mb-1">
            <div class="card-body">
              <div class="row">
                {{!-- 大頭照 --}}
                <div class="col-3">
                  <img src="{{this.User.avatar}}" alt="avatar" id="avatar-popular">
                </div>
                {{!-- 貼文內容 --}}
                <div class="col mt-2">
                  <h6 class="card-subtitle mb-2 text-muted">
                    <a href="/users/{{this.User.id}}/tweets">
                      @{{this.User.name}}
                    </a>
                  </h6>
                  <p class="card-text">{{this.description}}</p>
                  <button type="button" class="btn btn-primary float-right">Unfollow</button>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{!-- ------ --}}
    </div>

  </div>
</div>