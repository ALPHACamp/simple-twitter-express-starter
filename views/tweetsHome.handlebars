<div class="container">
  <div class="row">
    {{!-- 貼文牆時間軸 --}}
    <div class="col">
      {{!-- 新增貼文 --}}
      <div class="row my-3">
        <form action="/tweets" method="POST" class="col mt-3">
          <div class="form-group">
            {{!-- 輸入欄 --}}

            <textarea class="form-control" id="newTweet" name="newTweet" rows="3"
              placeholder="What's on your mind?"></textarea>

            {{!-- 按鈕 --}}
            <button type="submit" class="btn btn-primary mt-2 float-right">Tweet</button>
          </div>
        </form>
      </div>
      {{!-- 其他貼文 --}}
      <div class="row">
        <div class="col">
          {{#each tweets as |tweet|}}
            {{#> blockTweetPost}}
              {{tweet.value}}
              {{/blockTweetPost}}
          {{/each}}
        </div>
      </div>
    </div>
    {{!----------}}
    {{!-- 熱門話題 --}}
    <div class="col-4 mt-4" id="popularField">
      <h3>Popular</h3>
      {{!-- 熱門貼文 --}}
      <div class="row">
        <div class="col">
          {{#each tweets as |tweet|}}
            {{#> blockPopular}}
              {{tweet.value}}
              {{/ blockPopular}}
          {{/each}}
        </div>
      </div>
    </div>
    {{!----------}}
  </div>
</div>