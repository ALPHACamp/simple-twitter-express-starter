<form action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
  <div class="container my-4">
    <div class="row">
      <div class="col-4">
        <div class="form-group text-center">
          <img src="{{user.avatar}}" style="width:100%;" height="280px">
          <input type="file" class="form-control-file mt-2" id="avatar" name="avatar">
        </div>
      </div>
      <div class="col-8 ">
        <h4>Name</h4>
        <div class="form-group">
          <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="{{user.name}}">
        </div>
        <h4>Introduction</h4>
        <div class="form-group my-2">
          <textarea class="form-control" id="introduction" name="introduction" rows="6"
            placeholder="What's on your mind">{{user.introduction}}</textarea>
        </div>
        <div style="text-align:right;">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </div>
</form>