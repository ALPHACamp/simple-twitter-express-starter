<form action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
  <div class="container row">
    <div class="col-4">
      <div class="form-group text-center">
        <img src="{{user.avatar}}" style="width:100%; height:100%;">
        <input type="file" class="form-control-file mt-2" id="avatar" name="avatar">
      </div>
    </div>
    <div class="col-8 text-right">
      <div class="form-group">
        <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="{{user.name}}">
      </div>
      <div class="form-group">
        <textarea class="form-control" id="introduction" name="introduction" rows="5"
          placeholder="What's on your mind">{{user.introduction}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>