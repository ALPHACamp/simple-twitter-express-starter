<h1>Like Page</h1>
<div class="row">
  <div class="col-4">
    <img src="{{userData.avatar}}" alt="avatar" height="200px" width="200px">
    <h4>{{userData.name}}</h4>
    <p>{{userData.introduction}}</p>
    <ul>
      <li>Tweets:{{#count userData.Tweets}}{{/count}}</li>
      <li>Following:{{#count userData.Followings}}{{/count}}</li>
      <li>Follower:{{#count userData.Followers}}{{/count}}</li>
      <li>Like:{{#count userData.Likes}}{{/count}}</li>
    </ul>
    {{#ifFollowed userData.id user.id}}
    <form action="/following/{{user.id}}?_method=DELETE" method="POST" style="display: inline">
      <button type="submit" class="btn btn-danger">Unfollow</button></form>
    {{else}}
    <form action="/following/{{user.id}}" method="POST" style="display: inline">
      <button type="submit" class="btn btn-primary">Follow</button> </form>
    {{/ifFollowed}}
  </div>
</div>
<div class="col-8">
  {{#each userData.Likes}}
  <div class="card">
    <div class="card-body">
      <label>
        <h4 class="card-title">{{this.Tweet.User.name}}</h4>
      </label>
      <label class="m-auto">
        <h5>{{moment this.Tweet.createdAt}}</h5>
      </label>
      <p>{{this.Tweet.description}}</p>
      <a href="/tweets/{{this.UserId}}/replies">Reply({{#count this.Tweet.Replies}}{{/count}})</a>
      <a class="ml-2" href="#">Like({{#count this.Tweet.Likes}}{{/count}})</a>
    </div>
  </div>
  {{/each}}

</div>
</div>