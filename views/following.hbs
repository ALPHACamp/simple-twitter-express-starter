<div class="row">
	<div class="col-md-4 pr-5 display-flex justify-content-center">
		{{#if profile.avatar}}
		<img
			class="my-5 img-thumbnail"
			src="{{profile.avatar}}"
			alt="{{profile.name}}"
			width="200px"
			height="200px"
			/>
		{{else}}
		<img
			class="my-5i mg-thumbnail"
			src="https://lighthouse-cdn.alphacamp.co/default/medium_user_photo.jpg"
			width="200px"
			height="200px"
			/>
		{{/if}}
		<h2 class="mb-4" style="text-transform:capitalize;">
			<strong>
				{{profile.name}}
			</strong>
		</h2>
		<p class="text-dark mb-3 ml-1" style="font-size:12px">{{profile.introduction}}</p>
		<br />
		<div class="mb-4 ml-2">
			<ul class="list-group">
				<li class="list-group-item"> <h5>
						<a href="/users/{{profile.id}}/tweets" style="text-decoration:none;">
							<strong class="text-dark">
								Tweets
							</strong>
							<span class="text-light badge badge-dark">
								{{profile.Tweets.length}}
							</span>
						</a>
					</h5></li>
				<li class="list-group-item"> <h5>
						<a href="/users/{{profile.id}}/followings" style="text-decoration:none;">
							<strong>
								Followings
							</strong>
							<span class="text-light badge badge-primary">
								{{profile.Followings.length}}
							</span>
						</a>
					</h5></li>
				<li class="list-group-item"> <h5>
						<a href="/users/{{profile.id}}/followers" style="text-decoration:none;">
							<strong class="text-dark">
								Followers
							</strong>
							<span class="text-light badge badge-dark">
								{{profile.Followers.length}}
							</span>
						</a>
					</h5></li>
				<li class="list-group-item"> <h5 class="text-muted">
						<a href="/users/{{profile.id}}/likes" style="text-decoration:none;">
							<strong class="text-dark">
								Likes
							</strong>
							<span class="text-light badge badge-dark">
								{{profile.LikedTweets.length}}
							</span>
						</a>
					</h5></li>
			</ul>

			<br />
		</div>
		<div class="text-right">
			{{#ifCond profile.id user.id}}
			<a href="/users/{{profile.id}}/edit">
				<button class="btn btn-primary">
					Edit Profile
				</button>
			</a>
			{{else}}
			{{#if isFollowed}}
			<form
				action="/followships/{{profile.id}}?_method=DELETE"
				method="POST"
				style="display: contents;">
				<button type="submit" class="btn btn-danger">
					<i class="fa fa-user px-2" aria-hidden="true"></i>
				</button>
			</form>
			{{else}}
			<form action="/followships" method="POST" style="display: contents;">
				<input type="hidden" name="userId" value="{{profile.id}}" />
				<button type="submit" class="btn btn-secondary">
					<i class="fa fa-user-plus px-2" aria-hidden="true"></i>
				</button>
			</form>
			{{/if}}
			{{/ifCond}}
		</div>
	</div>
	<div class="col-md-8 mt-5">
		
		<h1 class="mb-5 text-info">
			 <strong style="font-family:serif;">Followings</strong>
		</h1>
		{{#if followingList}}
		<div class="row">
			{{#each followingList}}
			<div class="card col-md-5 m-2 mb-2" width="250px" height="250px">
				<div class="row">
					<div class="col-md-4 my-4">
						<img src="{{this.avatar}}" alt="{{this.name}}" width="100px"
							height="100px" class="rounded ml-2" style="text-decoration:none;">
					</div>

					<div class="col-md-8">
						<div class="card-body">
							<h5><a href="/users/{{this.id}}/tweets" class="text-decoration-none">{{this.name}}</a></h5>
							<p>{{this.introduction}}</p>
						</div>
					</div>
					<div class="card-body">
						{{#ifCond this.id ../user.id}}
						<a href="/users/{{../user.id}}/edit"><button class="btn btn-primary">Edit
								Profile</button></a>
						{{else}}
						<form
							class="text-right"
							action="/followships/{{this.id}}?_method=DELETE"
							method="POST">
							<button type="submit" class="btn btn-danger" name="userId"
								value={{this.id}}>
								<i class="fa fa-user px-2" aria-hidden="true"></i>
							</button>
						</form>
						{{/ifCond}}
					</div>
				</div>
			</div>
			{{/each}}
			{{else}}
			<h3 class="mt-5 text-center text-info">沒有資料</h3>
			{{/if}}
		</div>
	</div>
