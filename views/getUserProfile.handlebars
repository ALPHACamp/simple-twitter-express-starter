<form action="/users/{{user.id}}/edit?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="row mx-auto">
    <div class="col-4">
      <div class="form-group">
        <img src="{{user.avatar}}" width="300" id="personal-info-avatar" alt="">
        <br>
        <label for="image" class="mt-2">Image</label>
        <input type="file" class="form-control-file" id="image" name="image" accept="image/gif, image/jpeg, image/png">
        <small class="text-muted">接受gif, jpeg, png格式</small>
      </div>
    </div>
    <div class="col-4">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name" value="{{user.name}}">
      </div>

      <div class="form-group">
        <label for="introduction">Introduction</label>
        <input type="text" class="form-control" name="introduction" id="introduction" placeholder="Edit introduction"
          value="{{user.introduction}}">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4 ml-4 mt-3">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>