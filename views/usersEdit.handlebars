<div class="row">
    <div class="col-md-12">
        <form action="/users/{{user.id}}/edit" method="POST" style="display: inline;" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <img src="{{user.avatar}}" alt="{{user.name}}" class="user-Profile-avatar">
                    <br>
                    <div class="form-group">
                        <label for="avatar">Upload New Avatar</label>
                        <input type="file" class="form-control-file" id="avatar" name="avatar">
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="form-group user-Profile-name">
                        <label for="name">Upload New Name</label>
                        <input type="text" class="form-control-name" name="name" id="name" placeholder="Enter name" value="{{user.name}}" required>
                        <small id="imageHelp" class="form-text text-muted">Revise your name here</small>
                    </div>
                    <div class="form-group user-Profile-introduction">
                        <label for="introduction">Upload New Introduction</label>
                        <textarea class="form-control-introduction" name="introduction" id="introduction" placeholder="Introduce yourself" value="{{user.introduction}}" rows="3" required></textarea>
                        <small id="imageHelp" class="form-text text-muted">Put your introduction here</small>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                </div>
        </form>
    </div>
</div>