<form class="form" action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
  <div class="row mt-5">
    <div class="col-md-5">

      <div class="avatar-image  d-flex justify-content-center" style="width:auto;border:2px solid #fff;">
        <img src="{{user.avatar}}" onerror="this.src='/images/default-user.jpg';" alt="avatar"
          class="card-img shadow" />
      </div>

      <div class="form-group d-flex justify-content-center mt-3">
        <label class="btn btn-outline-dark btn-round" for="avatar" style="color: #1ea1f2;border-color:#1ea1f2;">
          <input type="file" class="btn form-control-file" id="avatar" name="avatar" style="display: none;">
          <i class="fa fa-photo"></i> Upload
        </label>
      </div>
    </div>

    <div class="col-md-7">
      <div class="form-group input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1" style="color:#fff;background-color:#15202b;">Name</span>
        </div>
        <input type="text" class="form-control" name="name" id="name" value="{{user.name}}">
      </div>

      <div class="form-group  input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"
            style="color:#fff;background-color:#15202b;">Description</span>
        </div>
        <textarea class="form-control" id="introduction" name="introduction" rows="8">{{user.introduction}}</textarea>
      </div>

      <button type="submit" class="btn btn-outline-dark btn-round mt-2 float-right"
        style="color: #1ea1f2;border-color:#1ea1f2;">
        Update
      </button>
    </div>
  </div>
</form>