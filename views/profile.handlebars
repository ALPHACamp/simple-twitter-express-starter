{{!-- views/profile.handlebars --}}
<form action="/users/{{user.id}}/edit?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="row mt-3">
    <div class="col-sm-3">
      <img class="img-responsive center-block" src="{{user.avatar}}" style="width: 250px;margin-bottom: 25px;">
      <span>{{user.name}}</span>
      <p>{{user.introduction}}</p>
      <p>Tweets {{user.Tweets.length}}</p>
      <p>Following {{user.Followings.length}}</p>
      <p>Follower {{user.Followings.length}}</p>
      <p>Like {{user.LikedTweets.length}}</p>
      {{#if isOwner}}
      <a href="/users/{{user.id}}/edit" class="btn btn-outline-primary">Edit Profile</a>
      {{else}}
      <a href="#" class="btn btn-outline-primary">Follow</a>
      {{/if}}
    </div>
    <div class="col-sm-9">
      <div class="mt-3 list-group">
        {{#each tweets}}
        <div class="list-group-item list-group-item-action flex-column align-items-start position-relative mb-2">

          <img class="float-left position-relative" style="left:-7px;" src="{{../user.avatar}}" width="80" height="80"
            alt="">
          <a class="mb-1" href="/users/{{this.User.id}}/tweets">@{{this.User.name}}</a>
          <small>{{moment this.createdAt}}</small>
          <div class="d-flex justify-content-between">
            <p>{{this.description}}</p>
          </div>
          {{!-- secion Reply --}}
          {{#if this.Replies}}
          <a href="/tweets/{{this.id}}/replies?userId={{this.User.id}}">Reply({{{this.Replies.length}}})</a>
          {{else}}
          <a href="/tweets/{{this.id}}/replies?userId={{this.User.id}}">Reply(0)</a>
          {{/if}}
          {{!-- section Like --}}
          {{#if this.LikedUsers}}
          <a href="#">Like({{{this.LikedUsers.length}}})</a>
          {{else}}
          <a href="#">Like(0)</a>
          {{/if}}
        </div>
        {{/each}}
      </div>


    </div>
  </div>

</form>