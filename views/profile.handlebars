<div class="row">
	{{!-- {{#each user.Tweets}}要取user.Tweets.length不能使用each疊代 --}}
	<div class="container col-4">
		<br>
		<br>
		<div class="card">
			<div class="card-body container">
				<div class="container">
					<img class="img-fluid rounded img-responsive col-3 p-3" src="{{profile.avatar}}">
					<h4>
						<p>{{profile.name}}</p>
						<h6 class="text-justify font-weight-light">{{profile.introduction}}</h6>
					</h4>
					<ul class="list-unstyled list-inline">
						<li>Tweets <strong>{{profile.Tweets.length}}</strong></a></li>
						<li>Following <strong class="text-monospace text-secondary">{{profile.Followings.length}}</strong></li>
						<li>Follower <strong class="text-monospace text-secondary">{{profile.Followers.length}}</strong></li>
						<form action="/users/{{this.id}}/like" method="POST"><li>Like <strong>{{profile.LikedTweets.length}}</strong></li>
						</form>

					</ul>

				</div>
					{{#if this.isFollowed }}
					<form action="/users/{{profile.id}}/following/?_method=DELETE" method="POST"><button type="submit"
							class="btn btn-danger">UnFollowed</button></form>
					{{else}}
					<form action="/users/{{profile.id}}/following" method="POST"><button type="submit" class="btn btn-primary">Follow</button>
					</form>
					{{/if}}
				<hr>
				{{!-- {{/each}} --}}
			</div>

		</div>
	</div>
	<br /><br />
	<div class="container col-8">
		<div class="row">
			<h4>Tweets</h4>
			<div class="card-body container row">
				{{#each profile.Tweets}}
				<img class="img-fluid rounded img-responsive col-3 p-3" src="{{../profile.avatar}}">
				<div class="container col-8">
					<h4 class="">
						<a href="/users/{{../profile.id}}">{{../profile.name}}</a>
						<small>{{moment this.createdAt}}</small>
					</h4>
					<p class="text-justify font-weight-light">{{this.description}}</p>

					<ul class="list-unstyled list-inline">
						<li><a href="/tweets/{{this.id}}/replies"
								class=" text-info text-reset">Reply(<strong>{{this.Replies.length}}</strong>)</a></li>
						<li><a href="/tweets/{{this.id}}/like"
								class=" text-danger text-reset">Like(<strong>{{this.LikedUsers.length}}</strong>)</a></li>

					</ul>
				</div>
				<hr>
				{{/each}}
			</div>




</div>
