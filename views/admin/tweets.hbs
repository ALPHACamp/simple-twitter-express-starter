<h1 class="my-5 text-info"><strong>Tweet 後台</strong></h1>
<h4>
  <a href="/admin/tweets" class="text-dark">Tweets</a> |
  <a href="/admin/users" class="text-secondary">Users</a>
</h4>
<br/>
<br/>

<table class="table table-hover" id="myTable">
  <thead class="thead-dark">
    <tr>
      
      <th scope="col" onclick="w3.sortHTML('#myTable', '.item', 'td:nth-child(1)')">
        User <i class="fa fa-sort" style="font-size:13px;"></i></th>
      <th scope="col" onclick="w3.sortHTML('#myTable', '.item', 'td:nth-child(2)')">
        Description <i class="fa fa-sort" style="font-size:13px;"></i></th>
      <th scope="col" onclick="w3.sortHTML('#myTable', '.item', 'td:nth-child(3)')">
        CreateAt <i class="fa fa-sort" style="font-size:13px;"></i></th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each tweets}}
    <tr class="item">
      <td>{{ this.User.name }}</td>
      <td>{{ this.description }}</td>
      <td>{{ moment this.createdAt }}</td>
      <td>
        <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
