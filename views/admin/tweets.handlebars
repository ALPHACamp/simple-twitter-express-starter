<h1>tweet後台</h1>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="/admin/tweets">tweet</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/users">User</a>
  </li>
</ul>

<br />
<div class="text-light">
  <table class="table table-striped table-bordered  table-dark" id="tweets-table" cellspacing="0" width="100%">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">User</th>
        <th scope="col">tweet</th>
        <th scope="col">Reply</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      {{#each tweets}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.User.name}}</td>
        <td>{{this.description}}</td>
        <td class="text-center">
          {{#ifCond this.numOfReplies 0}}
          <span class="badge badge-secondary">{{this.numOfReplies}}</span>
          {{else}}
          <a href="/admin/tweets/{{this.id}}/replies" class="badge badge-primary" role="button">
            {{this.numOfReplies}}
          </a>
          {{/ifCond}}
        </td>
        <td>
          <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script type="text/javascript" src="/javascripts/datatables.js"></script>