<h1>推文後台</h1>
<span>切換：</span>
<a href="#">推文</a>
<span>/</span>
<a href="/admin/users">使用者</a>

<table class="table mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Description(Preview)</th>
      <th scope="col">Author</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each tweets.rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.description}}</td>
      <td>{{this.User.name}}</td>
      <td>
        <a href="/tweets/{{this.id}}/replies" class="btn btn-info">Details</a>
      </td>
      <td><form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger"
          onclick="if(confirm('Are you sure?')) return true; else return false">Delete</button>
      </form></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/admin/tweets?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifFollowed this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link"
        href="/admin/tweets?page={{this}}">{{this}}</a></li>
    {{/ifFollowed}}
    {{/each}}
    <a class="page-link" href="/admin/tweets?page={{next}}" aria-label="Next">
      <span aria-hidden="true">&raquo;</span>
    </a>
    </li>
  </ul>
</nav>