<h1>Twister Back Stage</h1>

<a href="/admin/tweets">Tweets</a> | 
<a href="/admin/users">Users</a>

<br/>
<br/>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">UserId</th>
      <th scope="col">Name</th>
      <th scope="col">Tweet Comment</th>
      <th scope="col">Date</th>
      <th scope="col">#</th>
      <th scope="col">#</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each tweets}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <th scope="row">{{this.User.id}}</th>
      <th scope="row">
        <a href="/users/{{this.User.id}}/tweets" class="text-primary font-weight-bolder">
          @{{this.User.name}}
        </a>
      </th>
      <td>{{this.description}}</td>
      <td>{{moment this.createdAt}}</td>
      <td>
        <a class="col-6 col-md-3 text-info font-weight-bolder" href="/tweets/{{this.id}}/replies">
          Reply({{this.Replies.length}})
        </a>
      </td>
      <td>
        <div class="col-6 col-md-3 text-danger font-weight-bolder">
          Like({{this.LikedUsers.length}})
        </div>
      </td>
      <td>
        <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
