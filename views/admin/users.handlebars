<h1>使用者後台</h1>
<span>切換：</span>
<a href="/admin/tweets">推文</a>
<span>/</span>
<a href="#">使用者</a>

<table class="table mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Avatar</th>
      <th scope="col">Activity</th>
    </tr>
  </thead>
  <tbody>
    {{#each users.rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td><img src="{{this.avatar}}" alt="avatar" class="border" width="50px" height="50px"></td>
      <td>
        <a href="/users/{{this.id}}/tweets" class="btn btn-info">Details</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/admin/users?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifFollowed this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="/admin/users?page={{this}}">{{this}}</a></li>
    {{/ifFollowed}}
    {{/each}}
    <a class="page-link" href="/admin/users?page={{next}}" aria-label="Next">
      <span aria-hidden="true">&raquo;</span>
    </a>
    </li>
  </ul>
</nav>