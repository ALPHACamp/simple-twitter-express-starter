<div class="d-flex justify-content-between px-3">
  <span class="row">
    <h1>使用者後台</h1><h5 style='line-height: 65px;'>(以推文總數遞減排序)</h5>
  </span>
  <span class="row">切換：</span><span></span><a href="/admin/tweets">推文</a><span>/</span><a href="#">使用者</a></span>
</div>

<table class="table mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Avatar</th>
      <th scope="col">Activity</th>
    </tr>
  </thead>
  <tbody>
    {{#each users.rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td><img src="{{this.avatar}}" alt="avatar" class="border" width="50px" height="50px"></td>
      <td>
        <a href="/users/{{this.id}}/tweets" class="btn btn-info">
          <i class="fas fa-info-circle"></i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<nav aria-label="Page navigation example" class="d-flex justify-content-center">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/admin/users?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifCond this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="/admin/users?page={{this}}">{{this}}</a></li>
    {{/ifCond}}
    {{/each}}
    <a class="page-link" href="/admin/users?page={{next}}" aria-label="Next">
      <span aria-hidden="true">&raquo;</span>
    </a>
    </li>
  </ul>
</nav>