<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Role</th>
      <th scope="col">推播數</th>
      <th scope="col">跟隨者數</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.role}}</td>
      <td>{{this.Tweets.length}}</td>
      <td>{{this.Followers.length}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>






