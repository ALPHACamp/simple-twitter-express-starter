<form action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
  <div class="row">
    <div class="col-md-4 display-flex justify-content-center">
      <div>
        <img class="rounded" src="{{user.avatar}}" width='200px' height='200px' alt="avatar">
      </div>

      <div class="form-group mt-3">
        <label for="avatar"></label>
        <input type="file" class="form-control-file" id="avatar" name="avatar" style="text-align: right;">
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Name" value="{{user.name}}" required>
      </div>

      <div class="form-group">
        <label for="introduction">Introduction</label>
        <textarea class="form-control" id="introduction" name="introduction" rows="3"
          placeholder="Type anything about you here....">{{user.introduction}}</textarea>
      </div>

      <div style="text-align: right;">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
      <div class="mt-3 mr-1" style="text-align: right;">
        <a href='javascript:history.back()'>
          <strong class="mb-4">回上一頁</strong>
        </a>
      </div>
    </div>
  </div>
</form>