<script type="text/javascript">

  const socket = io()

  const textarea = document.getElementById('textarea')
  textarea.addEventListener('input', markFriend)

  function markFriend(e) {


    let regExp = /^(.*\s+@\w+|@\w+)/
    let keyword = ''
    if (regExp.test(e.target.innerHTML)) {

      //切割字串

      let indices = []
      let idx = e.target.innerHTML.indexOf('@');
      while (idx != -1) {
        indices.push(idx);
        idx = e.target.innerHTML.indexOf('@', idx + 1);
      };
      //超過兩個@的情況
      if (indices.length > 1) {
        keyword = e.target.innerHTML.slice(indices[indices.length - 1] + 1, indices[indices.length - 1] + 2)
      } else {
        keyword = e.target.innerHTML.slice(e.target.innerHTML.indexOf('@') + 1, e.target.innerHTML.length + 1)
      }

      //emit
      socket.emit('test', keyword)

      socket.on('tag', function (obj) {

        console.log(obj)
        let x = ``
        x = `<select id="mySelect" class="selectpicker" data-live-search="true" onchange="myFunction()">  
`;

        let { userName } = obj

        userName.forEach((name) => {
          x += `<option value="${name}">${name}</option>`
        })



        x += `</select >`

        let indices = []
        let idx = e.target.innerHTML.indexOf('@');
        while (idx != -1) {
          indices.push(idx);
          idx = e.target.innerHTML.indexOf('@', idx + 1);
        }

        const result = textarea.innerHTML.slice(0, indices[indices.length - 1] + 2)

        textarea.innerHTML = result + x

        textarea.contentEditable = "false";

      }
      )
    }

  }

  function getTweetsContent() {
    document.getElementById('tweets').value = document.getElementById('textarea').innerHTML
  }

  function myFunction() {

    const mySelect = document.getElementById("mySelect");
    let y = mySelect.value

    const template = `<a>${y}</a>`
    mySelect.remove()

    //取得@之前字串
    const z = textarea.innerHTML
    let indices = []
    let idx = z.indexOf('@');
    while (idx != -1) {
      indices.push(idx);
      idx = z.indexOf('@', idx + 1);
    }
    const result = z.slice(0, indices[indices.length - 1] + 1)

    //合併輸出
    textarea.innerHTML = result + template
    textarea.contentEditable = "true";

  }

  function tweetsLeft() {
    const tweets = document.getElementById('tweets').value
    let tweetsCount = 140 - tweets.length
    const tweetsRemain = document.getElementById('tweetsNumber')
    const tweetsTitle = document.getElementById('tweetsText')
    const tweetsButton = document.getElementById('tweetBtn')

    if (tweetsCount <= 0) {
      tweetsRemain.className = "text-danger"
      tweetsRemain.textContent = 'Tweets exceed 140'
      tweetsButton.disabled = true
      tweetsTitle.style.display = 'none'
    } else {
      tweetsRemain.className = "text-muted"
      tweetsRemain.textContent = tweetsCount
      tweetsButton.disabled = false
      tweetsTitle.style.display = 'inline'
    }
  }


</script>