<div class="row justify-content-center my-3">
  <div class="col-md-6">
    <form action="/tweets" method="POST">
      <div class="input-group">
        <textarea id="tweets" name="tweets" class="form-control" aria-label="With textarea" placeholder="what's on your mind?"  style="border-radius: 8px; height: 150px"></textarea>
      </div>
      <button class="btn btn-primary float-right" type="submit">Tweet</button>
    </form>
    <br>
    <br>
    {{#each tweets}}
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="{{this.User.avatar}}" class="card-img" alt="user avatar">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{ this.User.name }}</h5>
              <p class="card-text">{{ this.description }}</p>
              <p class="card-text"><small class="text-muted">{{ fromNow this.createdAt }}</small></p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="col-md-4">
    <p class="h1">popular</p>
    <br>
    {{#each users}}
      <div class="card mb-3" style="max-width: 400px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="{{this.avatar}}" class="card-img" alt="user avatar">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <a href="/users/{{this.id}}/tweets">{{ this.name }}</a>
              </h5>
              <p class="card-text">{{ this.introduction}}.</p>
              <p class="card-text"><small class="text-muted">{{ fromNow createdAt }}</small></p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>