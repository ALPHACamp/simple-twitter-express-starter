<div class="container row">
  <div class="col-8">
    <div class="div">
      <form action="/tweets" method="POST">
        <div class="form-group">
          <textarea class="form-control" id="text" name="text" rows="5" placeholder="What's on your mind"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Tweet</button>
      </form>
    </div>
    <div class="div mt-2">
      {{#each tweets}}
      <div class="card mb-3">
        <div class="row ">
          <div class="col-md-4 ">
            <img src="{{this.User.avatar}}" class="card-img mt-3 ml-3" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <a href="/users/{{this.User.id}}/tweets">
                <h5 class="card-title">@{{this.User.name}},{{this.createdAt}}</h5>
              </a>
              <p class="card-text">{{this.description}}</p>
              <a href="/tweets/{{this.id}}/replies">Reply({{this.reply}})</a> <a href="#"
                class="text-danger ml-1">like({{this.like}})</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="col-4">
    <h1>Popular</h1>
    {{#each users}}
    <div class="card mb-3">
      <div class="row ">
        <div class="col-md-4 ">
          <img src="{{this.avatar}}" class="card-img mt-3 ml-3" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <a href="/users/{{this.id}}/tweets">
              <h5 class="card-title">@{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.introduction}}</p>
          </div>
          {{#if this.isFollowed }}
          <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
            <div class="text-right mb-2 mr-2">
              <button type="submit" class="btn btn-danger">Unfollow</button>
            </div>
          </form>
          {{else}}
          {{#ifNoCond this.id ../nowUser}}
          <form action="/followships/{{this.id}}" method="POST">
            <div class="text-right mb-2 mr-2">
              <button type="submit " class="btn btn-primary">Follow</button>
            </div>
          </form>
          {{/ifNoCond}}
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>