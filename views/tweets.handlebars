<div>
  <div class="row" style="margin: 40px;">
    <div class="col-md-6">
      <form action="">
        <div class="input-group">
          <textarea class="form-control" aria-label="With textarea" placeholder="what's on your mind?"  style="border-radius: 8px; height: 150px"></textarea>
        </div>
        <button class="btn btn-primary float-right" type="submit">Tweet</button>
      </form>
      <br>
      <br>
      {{#each tweets}}
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="{{this.User.avatar}}" class="card-img" alt="user avatar">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">{{ this.User.name }}</h5>
                <p class="card-text">{{ this.description }}</p>
                <p class="card-text"><small class="text-muted">{{ fromNow this.createdAt }}</small></p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col-md-4">
      <p class="h1">popular</p>
      <br>
      {{#each users}}
        <div class="card mb-3" style="max-width: 400px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="{{this.avatar}}" class="card-img" alt="user avatar">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">{{ this.name }}</h5>
                <p class="card-text">{{ this.introduction}}.</p>
                <p class="card-text"><small class="text-muted">{{ fromNow createdAt }}</small></p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>