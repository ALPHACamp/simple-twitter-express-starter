<div class="row">
  <div class="col">
    <form action="/tweets" method="post">
      <div class="form-group">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="What's on your mind?"
          name="content"></textarea>
        <div class="d-flex flex-row-reverse">
          <div class="p-2">
            <button type="submit" class="btn btn-primary">Tweet</button>
          </div>
        </div>

      </div>
    </form>
    <div class="tweets">
      <!--tweetsSection-->
      {{#each tweets }}
      <div class="row border border-dark">
        <div class=" col mt-2 mb-2">
          <img src="{{this.User.avatar}}">
        </div>
        <div class="col mt-3 mb-3">
          <a href="/users/{{this.User.id}}/tweets">
            <h5>{{this.User.name}}</h5>
          </a>
          <p>{{this.description}}
          </p>

          <a href="/tweets/{{this.id}}/replies" class="mr-2">Reply</a>
          <a href="/tweets/{{this.id}}/like">Like</a>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
  <div class="col">
    <h2>Popular</h2>
    {{#each users}}
    <div class="row border border-dark">
      <div class=" col mt-2 mb-2">
        <img src="{{this.avatar}}">
      </div>
      <div class="col mt-3 mb-3">
        <h5>{{this.name}}</h5>
        <p>{{this.introduction}}
        </p>

        <div class="text-right">
          <a href="/followships" class="btn btn-primary">follow</a>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>