<div class="row mt-5">
  <div class="col-8">
    <form class="post-tweet" action="/tweets" method="POST">
      <div class="mb-1">

        <textarea class="form-control" id="description" name="description" placeholder="Post your tweet" rows="3"
          maxlength="140" required></textarea>
        <div class="invalid-feedback">
          Please enter a message in the textarea.
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <button class="btn btn-outline-primary mt-3 float-right">Tweet</button>
      </div>
    </form>


    <div class="mt-3 list-group container">
      {{#each tweets}}
        <div class="list-group-item mb-2 row d-flex" style="border-radius: 7px;">
          <div class="col-2 d-flex justify-content-center pt-2 pl-1">
            <img style="left:-7px;" src="{{this.User.avatar}}" width="80" height="80" alt="user avatar">
          </div>
          <div class="col-10 p-2">
            <a class="mb-1" href="/users/{{this.User.id}}/tweets">@{{this.User.name}}</a>
            <small>{{moment this.createdAt}}</small>
            <div class="d-flex justify-content-between">
              <p>{{this.description}}</p>
            </div>
            <a href="/tweets/{{this.id}}/replies?userId={{this.User.id}}">Reply({{{this.ReplyCount}}})</a>
          </div>
        </div>
      {{/each}}
    </div>

    <script src="/javascripts/main.js"></script>


  </div>
  <div class="col-4">
    <h2>Popular Users</h2>
    <div class="mt-3 list-group container">
      {{#each top10PopularUsers}}
        <div class="list-group-item mb-2 row d-flex p-2" style="border-radius: 7px;">
          <div class="col-4 d-flex justify-content-center pt-2 pl-1">
            <img style="left:-7px;" src="{{this.avatar}}" width="80" height="80" alt="user avatar">
          </div>
          <div class="col-8 p-2">
            <a class="mb-1" href="/users/{{this.id}}/tweets">@{{this.name}} ( {{this.FollowersCount}} Followers )</a>
            <div class="d-flex justify-content-between">
              <p>{{this.introduction}} ...</p>
            </div>
            <a class="btn btn-primary" href="#" role="button">Follow</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>