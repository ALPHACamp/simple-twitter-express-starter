<form action="/users/{{userData.id}}/edit" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" value="{{userData.name}}" id="name">
  </div>

  <div class="form-group">
    <label for="introduction">Introduction</label>
    <textarea type="text" class="form-control" name="introduction"
      id="introduction">{{userData.introduction}}</textarea>
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" name="image" id="image">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>