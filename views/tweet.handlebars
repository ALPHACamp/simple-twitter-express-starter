<div class="row mt-5">
  <div class="col-4 pr-5">
    <div class="text-center">
      <img class="avatar img-circle img-thumbnail" width="200" height="200"
        src="https://lighthouse-cdn.alphacamp.co/default/medium_user_photo.jpg" alt="avatar">
    </div>

    <ul class="list-group list-group-flush p-5">
      <li class="list-group-item border-top-0 border-bottom-0">
        <h3>{{{tweetOwner.name}}}</h3>
      </li>
      <li class="list-group-item border-top-0 border-bottom-0">
        <p>{{tweetOwner.introduction}}</p>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center border-top-0">
        Cras justo odio
        <span class="badge badge-primary badge-pill">14</span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Dapibus ac facilisis in
        <span class="badge badge-primary badge-pill">2</span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Morbi leo risus
        <span class="badge badge-primary badge-pill">1</span>
      </li>
    </ul>
  </div>
  <div class="col-8">
    <div class="position-relative" style="right: 26px;">
      <h2>Tweets</h2>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start position-relative mt-4 mb-5">

      <img class="float-left position-relative" style="left:-7px;" src="{{tweetOwner.avatar}}" width="80" height="80"
        alt="">
      <a class="mb-1" href="/users/{{tweetOwner.id}}/tweets">@{{tweetOwner.name}}</a>
      <small>{{moment tweet.createdAt}}</small>
      <div class="d-flex justify-content-between">
        <p>{{tweet.description}}</p>
      </div>

      <a href="/tweets/{{tweet.id}}/replies?userId={{tweetOwner.id}}">Reply({{{replies.length}}})</a>

    </div>
    <div class="position-relative" style="right: 26px;">
      <h2>Replies</h2>
    </div>
    <div class="mt-4 list-group">
      {{#if replies}}
        {{#each replies}}
          <div
            class="list-group-item list-group-item-action flex-column align-items-start position-relative mb-2 rounded-0">

            <img class="float-left position-relative" style="left:-7px;" src="{{this.User.avatar}}" width="80"
              height="80" alt="">
            <a class="mb-1" href="/users/{{this.User.id}}/tweets">@{{this.User.name}}</a>
            <small>{{moment this.createdAt}}</small>
            <div class="d-flex justify-content-between">
              <p>{{this.comment}}</p>
            </div>

          </div>
        {{/each}}
      {{/if}}
      <form class="mb-5" action="/tweets/{{tweet.id}}/replies" method="POST">
        <div class="mb-1">
          <label for="validationTextarea"></label>
          <textarea class="form-control" name="comment" placeholder="Required example textarea" rows="3" maxlength="140"
            required></textarea>
          <div class="invalid-feedback">
            Please enter a message in the textarea.
          </div>
          <input type="hidden" name="userId" value="{{user.id}}">
        </div>
        <div class="d-flex justify-content-end">
          <button class="btn btn-outline-primary mt-3 float-right">Reply</button>
        </div>
      </form>
    </div>
  </div>
</div>