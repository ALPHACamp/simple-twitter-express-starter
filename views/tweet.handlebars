<div class="row">
	{{!-- {{#each user.Tweets}}要取user.Tweets.length不能使用each疊代 --}}
	<div class="container col-4">
		<br>
		<br>
		<div class="card">
			<div class="card-body container">
				<div class="container">
					<img class="img-fluid rounded img-responsive col-3 p-3" src="{{user.avatar}}">
					<h4>
						<p>{{user.name}}</p>
						<h6 class="text-justify font-weight-light">{{user.introduction}}</h6>
					</h4>
					<ul class="list-unstyled list-inline">
						<li><a href="#" class=" text-info text-reset">Tweets(<strong>{{user.Tweets.length}}</strong>)</a></li>
						<li>Following <strong class="text-monospace text-secondary">{{user.Followings.length}}</strong></li>
						<li>Follower <strong class="text-monospace text-secondary">{{user.Followers.length}}</strong></li>
						<li><a href="#" class=" text-danger text-reset">Like(<strong>{{user.LikedTweet.length}}</strong>)</a></li>
					</ul>

				</div>
				<form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary">Follow</button>
				</form>
				<hr>
				{{!-- {{/each}} --}}
			</div>

		</div>
	</div>
	<br /><br />
	<div  class="container col-8">
			<div class="row">
				<h4>Tweets</h4>
				<div class="card-body container row">
					{{#each user.Tweets}}
					<div class="col-3">
						<img class="img-fluid rounded img-responsive" src="{{../user.avatar}}">
					</div>
					<div class="container col-8">
						<h4>
							<a href="/users/{{../user.id}}">{{../user.name}}</a>
							<small>{{moment this.Tweet.createdAt}}</small>
						</h4>
						<p>{{this.description}}</p>
						<div class="container row">
							<p class="mr-5">Like{{this.LikedTweet.length}}</p>
							<p>Reply</p>
						</div>
					</div>
					</hr>

					{{/each}}
				</div>
			</div>

			<div class="row">
				<h4>Replies</h4>
				<div class="card-body container row">
					{{#each user.Replies}}
					<div class="col-3">
						<img class="img-fluid rounded img-responsive" src="{{../user.avatar}}">
					</div>

					<div class="container col-8">
						<h4>
							<a href="/users/{{../user.id}}">{{../user.name}}</a>
							<small>{{moment this.createdAt}}</small>
						</h4>
						<p>{{this.comment}}</p>
					</div>
					</hr>

					{{/each}}
				</div>
			</div>
			<form action="/tweets" method="POST">
				<div class="form-group ">
					<textarea class="form-control" id="text" name="text" rows="3" placeholder="在想什麼?"></textarea>
					<button type="submit" class="btn btn-primary float-right mt-2">Reply</button>
				</div>
			</form>

	</div>


</div>
