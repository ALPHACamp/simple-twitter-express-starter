<div class="d-flex justify-content-center">
  <form class="form-signin mt-5" action="/signup" method="POST" style="width: 100%;">
    <div class="text-center mb-4">
      <h1 class="mb-3">Sign Up</h1>
    </div>
    <div class="form-label-group text-light mb-2">
      <label for="inputName">Name</label>
      <input type="text" name="name" class="form-control" placeholder="Enter Name" required autofocus>
    </div>
    <div class="form-label-group text-light mb-2">
      <label for="inputEmail">Email</label>
      <input type="text" name="email" class="form-control" placeholder="Enter Email" required autofocus>
    </div>
    <div class="form-label-group text-light mb-2">
      <label for="inputPassword">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Enter Password" required>
    </div>
    <div class="form-label-group text-light">
      <label for="inputPasswordCheck">Password Check</label>
      <input type="password" name="passwordCheck" class="form-control" placeholder="Password Check" required>
    </div>
    <br />
    <button class="btn btn-lg btn-outline-primary btn-block btn-round" type="submit">Submit</button>
    <div class="text-center mt-2">
      <p><a href="/signin">Sign In</a></p>
    </div>
    <p class="mt-4 mb-3 text-muted text-center">Â© 2018 - 2019</p>
  </form>
</div>