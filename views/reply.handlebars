<div class="row my-5">

  <div class="col-3">
    <div class="bg-white d-flex align-items-center justify-content-center" style="height: 150px; width:150px">
      <img src="{{tweet.User.avatar}}" alt="">
    </div>

    <h4 style="color:teal">{{tweet.User.name}}</h4>
    <p style="word-wrap: break-word; color:dodgerblue">{{tweet.User.introduction}}</p>
    <form action="/followships/{{tweet.User.id}}" method="POST">
      <button type="submit" class="btn btn-primary text-dark  font-weight-bold">Follow</button>
    </form>
  </div>

  <div class="col-9">
    <h3 style="color:teal">Tweets</h3>
    <div class="card mb-3 mx-4">
      <div class="row">
        <div class="col-4">
          <div class="bg-white d-flex align-items-center justify-content-center"
            style="width: 100%;height: 0;min-width: 40px;min-height: 40px;padding-bottom: 50%;padding-top: 50%;">
            <div class="bg-secondary" style="width: 70%;padding-bottom: 35%;padding-top: 35%;">
            </div>
          </div>
        </div>
        <div class="col-8 d-flex flex-column justify-content-around">
          <a href="#">
            <h5>@{{tweet.User.name}}</h5>
          </a>
          <p>{{tweet.description}}</p>
          <div>
            <span class="text-primary mr-auto">Reply(2)</span>
            <span class="text-danger mr-auto">Like(17)</span>
          </div>
        </div>
      </div>
    </div>

    <h3 style="color:teal">Replies</h3>
    {{#each tweet.Replies}}
    <div class="card mb-2 mx-4">
      <div class="row">
        <div class="col-4">
          <div class="bg-white d-flex align-items-center justify-content-center"
            style="width: 100%;height: 0;min-width: 40px;min-height: 40px;padding-bottom: 50%;padding-top: 50%;">
            <div class=".bg-secondary" style="width: 70%;padding-bottom: 35%;padding-top: 35%;">
            </div>
          </div>
        </div>
        <div class="col-8 d-flex flex-column justify-content-around">
          <a href="#">
            <h5>@{{this.User.name}}</h5>
          </a>
          <p>{{this.comment}}</p>
        </div>
      </div>
    </div>
    {{/each}}
    <form action="/tweets/{{tweet.id}}/replies">
      <div class="card mb-3 mx-4">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" style="border: none;"
          name="comment"></textarea>
      </div>
      <div class="row">
        <button type="submit" class="btn btn-primary ml-auto mr-5 text-dark font-weight-bold">Reply</button>
      </div>
    </form>
  </div>
</div>