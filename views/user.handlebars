<div class="row">
  <div class="col-md-4">
    <div class="row mt-3">
      <img class="rounded mx-auto my-auto" width="200px" height="200px">
      <div class="mx-auto mt-2" style="width: 200px;">
        <a href="/users/{{user.id}}">
          <h2 class="card-text">@{{profile.name}}</h2>
        </a>
        <p class="card-text mt-2">{{profile.introduction}}</p>
        <ul class="list-unstyled">
          <li>
          <li>Tweets: <strong>{{tweetNums}}</strong>
          </li>
          <li>Following: <strong>{{followings}}</strong>
          </li>
          <li>Follower: <strong>{{followers}}</strong>
          </li>
          <li>Like: <strong>{{likedTweets}}</strong>
          </li>
          {{#ifCond profile.id currentUser}}
            <li><a class="btn btn-primary mt-3" href="/users/{{profile.id}}/edit">edit</a></li>
          {{/ifCond}}
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="row">
      {{#each tweets}}
        <div class="card col-md-10 shadow-sm mx-auto mt-3">
          <div class="row">
            <div class="col-4 text-center d-flex">
              <img class="rounded mx-auto my-auto" width="120px" height="120px" src="#">
            </div>
            <div class="col-8 card-body">
              <a href="/tweets/{{this.id}}">
                <h5 class="card-text">@{{this.userName}}, {{this.createdAt}}</h5>
              </a>
              <p class="card-text">{{this.description}}</p>
              <h5>
                <a class="mr-3" href="#">Reply ({{this.replyNums}})</a>
                <a class="text-danger" href="#">Like({{this.likeNums}})</a>
              </h5>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>