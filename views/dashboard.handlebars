<div class="row">
    {{> sideNav}}
    <div class="col-md-8">
        {{#each userTweets}}
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{../user.avatar}}" class="card-img" alt="{{../user.name}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body outer-body">
                        <div class="card-body">
                            <a href="/users/{{../user.id}}/tweets" class="card-link"><strong>{{../user.name}}</strong></a>
                            <a href="#" class="card-link"><small>{{moment this.createdAt}}</small></a>
                        </div>
                        <p class="card-text">{{this.description}}</p>
                        <div class="card-body">
                            <a href="#" class="card-link">
                                <strong>Reply</strong>
                                <small>(2)</small>
                            </a>
                            <a href="#" class="card-link">
                                <strong>Like</strong>
                                <small>(3)</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
